<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Echo Brain Chat</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #1a1a1a;
            color: #e0e0e0;
            height: 100vh;
            display: flex;
            flex-direction: column;
        }
        .header {
            background: #2a2a2a;
            padding: 15px 20px;
            border-bottom: 2px solid #00ff88;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .header h1 {
            color: #00ff88;
            font-size: 24px;
        }
        .mode-toggle {
            display: flex;
            gap: 10px;
        }
        .mode-btn {
            padding: 8px 16px;
            background: #333;
            border: 1px solid #555;
            color: #e0e0e0;
            cursor: pointer;
            border-radius: 4px;
            transition: all 0.3s;
        }
        .mode-btn.active {
            background: #00ff88;
            color: #1a1a1a;
            border-color: #00ff88;
        }
        .chat-container {
            flex: 1;
            overflow-y: auto;
            padding: 20px;
            display: flex;
            flex-direction: column;
            gap: 15px;
        }
        .message {
            max-width: 70%;
            padding: 12px 16px;
            border-radius: 12px;
            line-height: 1.5;
        }
        .user-message {
            align-self: flex-end;
            background: #00ff88;
            color: #1a1a1a;
        }
        .echo-message {
            align-self: flex-start;
            background: #2a2a2a;
            border: 1px solid #444;
        }
        .input-area {
            background: #2a2a2a;
            padding: 20px;
            border-top: 2px solid #00ff88;
            display: flex;
            gap: 10px;
        }
        .input-box {
            flex: 1;
            padding: 12px;
            background: #333;
            border: 1px solid #555;
            color: #e0e0e0;
            border-radius: 8px;
            font-size: 14px;
        }
        .input-box:focus {
            outline: none;
            border-color: #00ff88;
        }
        .send-btn, .clear-btn {
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: bold;
            transition: all 0.3s;
        }
        .send-btn {
            background: #00ff88;
            color: #1a1a1a;
        }
        .send-btn:hover { background: #00dd77; }
        .clear-btn {
            background: #ff4444;
            color: white;
        }
        .clear-btn:hover { background: #dd3333; }
        .loading {
            align-self: flex-start;
            padding: 12px 16px;
            background: #2a2a2a;
            border: 1px solid #444;
            border-radius: 12px;
            color: #00ff88;
        }
        .error {
            align-self: center;
            padding: 12px 16px;
            background: #ff4444;
            color: white;
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>üß† Echo Brain</h1>
        <div class="mode-toggle">
            <button class="mode-btn active" data-mode="chat">Chat Mode</button>
            <button class="mode-btn" data-mode="query">Query Mode</button>
            <button class="clear-btn" onclick="clearChat()">Clear</button>
        </div>
    </div>
    
    <div class="chat-container" id="chatContainer"></div>
    
    <div class="input-area">
        <input type="text" class="input-box" id="messageInput" placeholder="Type your message..." onkeypress="handleEnter(event)">
        <button class="send-btn" onclick="sendMessage()">Send</button>
    </div>

    <script>
        let currentMode = 'chat';
        let conversationHistory = [];

        // Mode switching
        document.querySelectorAll('.mode-btn').forEach(btn => {
            btn.addEventListener('click', (e) => {
                document.querySelectorAll('.mode-btn').forEach(b => b.classList.remove('active'));
                e.target.classList.add('active');
                currentMode = e.target.dataset.mode;
                document.getElementById('messageInput').placeholder = 
                    currentMode === 'chat' ? 'Type your message...' : 'Ask a question...';
            });
        });

        function addMessage(content, isUser) {
            const container = document.getElementById('chatContainer');
            const message = document.createElement('div');
            message.className = isUser ? 'message user-message' : 'message echo-message';
            message.textContent = content;
            container.appendChild(message);
            container.scrollTop = container.scrollHeight;
        }

        function showLoading() {
            const container = document.getElementById('chatContainer');
            const loading = document.createElement('div');
            loading.className = 'loading';
            loading.id = 'loading';
            loading.textContent = '‚è≥ Echo is thinking...';
            container.appendChild(loading);
            container.scrollTop = container.scrollHeight;
        }

        function hideLoading() {
            const loading = document.getElementById('loading');
            if (loading) loading.remove();
        }

        function showError(message) {
            const container = document.getElementById('chatContainer');
            const error = document.createElement('div');
            error.className = 'error';
            error.textContent = '‚ùå Error: ' + message;
            container.appendChild(error);
            container.scrollTop = container.scrollHeight;
        }

        async function sendMessage() {
            const input = document.getElementById('messageInput');
            const message = input.value.trim();
            if (!message) return;

            addMessage(message, true);
            input.value = '';
            showLoading();

            try {
                const endpoint = currentMode === 'chat' ? '/api/echo/chat' : '/api/echo/query';
                const payload = currentMode === 'chat' 
                    ? { query: message, conversation_history: conversationHistory }
                    : { query: message };

                const response = await fetch(endpoint, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                hideLoading();

                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                }

                const data = await response.json();
                const reply = data.response || data.message || 'No response';
                
                addMessage(reply, false);
                
                if (currentMode === 'chat') {
                    conversationHistory.push({ role: 'user', content: message });
                    conversationHistory.push({ role: 'assistant', content: reply });
                }
            } catch (error) {
                hideLoading();
                showError(error.message);
            }
        }

        function handleEnter(event) {
            if (event.key === 'Enter') {
                sendMessage();
            }
        }

        function clearChat() {
            document.getElementById('chatContainer').innerHTML = '';
            conversationHistory = [];
            addMessage('Chat cleared. How can I help you?', false);
        }

        // Initialize
        addMessage('Hello! I am Echo Brain. How can I assist you today?', false);
    </script>
</body>
</html>
