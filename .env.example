# Echo Brain Board of Directors Environment Configuration
# Copy to .env and configure with your actual values

# Database Configuration
DB_HOST=192.168.50.135
DB_PORT=5432
DB_NAME=tower_consolidated
DB_USER=patrick
DB_PASSWORD=your_database_password_here
DB_SSLMODE=prefer

# Redis Configuration
REDIS_HOST=192.168.50.135
REDIS_PORT=6379
REDIS_PASSWORD=

# Authentication & Security
JWT_SECRET=your_jwt_secret_key_here_must_be_32_chars_minimum
AUTH_SERVICE_URL=http://192.168.50.135:8088
TOKEN_EXPIRY_MINUTES=30

# Docker Configuration
DOCKER_SOCKET=/var/run/docker.sock

# Connection Limits
MAX_CONNECTIONS=100
MAX_WEBSOCKET_CONNECTIONS=50

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/opt/tower-echo-brain/logs/echo_brain.log

# Ollama Configuration
OLLAMA_BASE_URL=http://192.168.50.135:11434
OLLAMA_MODEL_TIMEOUT=300

# Performance Settings
DB_POOL_MIN_CONNECTIONS=1
DB_POOL_MAX_CONNECTIONS=20
REDIS_CONNECTION_POOL_SIZE=10

# Security Settings
ALLOWED_ORIGINS=https://192.168.50.135,https://tower.local
CORS_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Media Processing
MEDIA_SCAN_ENABLED=true
MEDIA_SCAN_DIRECTORIES=/home/patrick/media,/home/patrick/Pictures
MEDIA_SCAN_INTERVAL_HOURS=24

# Board of Directors Settings
BOARD_DECISION_TIMEOUT_MINUTES=5
BOARD_CONSENSUS_THRESHOLD=0.7
BOARD_CONFIDENCE_THRESHOLD=0.8

# Development Settings (set to false in production)
DEBUG_MODE=false
ENABLE_SWAGGER_UI=false
ENABLE_SANDBOX_EXECUTION=false

# Backup Settings
BACKUP_ENABLED=true
BACKUP_DIRECTORY=/opt/tower-echo-brain/backups
BACKUP_RETENTION_DAYS=30

# Notification Settings
EMAIL_NOTIFICATIONS_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
NOTIFICATION_EMAIL=