#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/opt/tower-echo-brain/frontend/node_modules/nopt/bin/node_modules:/opt/tower-echo-brain/frontend/node_modules/nopt/node_modules:/opt/tower-echo-brain/frontend/node_modules:/opt/tower-echo-brain/node_modules:/opt/node_modules:/node_modules:/opt/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/opt/tower-echo-brain/frontend/node_modules/nopt/bin/node_modules:/opt/tower-echo-brain/frontend/node_modules/nopt/node_modules:/opt/tower-echo-brain/frontend/node_modules:/opt/tower-echo-brain/node_modules:/opt/node_modules:/node_modules:/opt/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../nopt/bin/nopt.js" "$@"
else
  exec node  "$basedir/../nopt/bin/nopt.js" "$@"
fi
