# Echo Brain Secure Environment Variables
# This file should contain NO hardcoded credentials
# All sensitive values should come from Vault or environment

# Database Configuration (NO PASSWORDS HERE)
DB_NAME=echo_brain
DB_USER=echo
DB_HOST=***REMOVED***
DB_PORT=5432
# DB_PASSWORD should be set via environment variable or Vault

# Vault Configuration
VAULT_ADDR=http://127.0.0.1:8200
VAULT_TOKEN_PATH=/home/echo/.vault-token

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# Service Configuration
ECHO_PORT=8309
ECHO_HOST=0.0.0.0

# JWT Configuration (use Vault for secret)
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Security Settings
ENABLE_AUTH=true
ENABLE_RATE_LIMITING=true
ENABLE_CORS=false
ALLOWED_ORIGINS=https://***REMOVED***,http://localhost:8080

# Logging
LOG_LEVEL=INFO
LOG_FILE=/opt/tower-echo-brain/logs/production_echo.log
ERROR_LOG_FILE=/opt/tower-echo-brain/logs/production_echo_error.log

# Feature Flags
ENABLE_AUTONOMOUS_BEHAVIORS=true
ENABLE_SYSTEM_COMMANDS=false
ENABLE_DEBUG_ENDPOINTS=false