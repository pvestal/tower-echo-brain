{
  "name": "tower-echo-brain-frontend-tools",
  "version": "1.0.0",
  "description": "Frontend development and analysis tools for Echo Brain",
  "private": true,
  "scripts": {
    "lint:js": "eslint --ext .js,.ts,.vue .",
    "lint:css": "stylelint **/*.{css,scss,vue}",
    "lint:html": "htmlhint **/*.html",
    "format": "prettier --write .",
    "test:frontend": "jest",
    "analyze:bundle": "webpack-bundle-analyzer",
    "lighthouse": "lighthouse --output=html --output-path=./reports/lighthouse.html",
    "audit:performance": "lighthouse --only-categories=performance --output=json --output-path=./reports/performance.json"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.57.1",
    "eslint-plugin-vue": "^9.19.2",
    "html-validate": "^8.7.4",
    "htmlhint": "^1.7.1",
    "jest": "^29.7.0",
    "lighthouse": "^11.4.0",
    "postcss": "^8.4.32",
    "prettier": "^3.6.2",
    "puppeteer": "^21.6.1",
    "source-map-explorer": "^2.5.3",
    "stylelint": "^16.25.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard": "^36.0.0",
    "typescript": "^5.3.3",
    "webpack-bundle-analyzer": "^4.10.1"
  }
}
