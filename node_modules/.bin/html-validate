#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/opt/node_modules/.pnpm/html-validate@8.29.0_jest-diff@29.7.0_jest-snapshot@29.7.0_jest@29.7.0_@types+node@20.1_a1438cacc9d0d0acd7c31b7996f073cf/node_modules/html-validate/bin/node_modules:/opt/node_modules/.pnpm/html-validate@8.29.0_jest-diff@29.7.0_jest-snapshot@29.7.0_jest@29.7.0_@types+node@20.1_a1438cacc9d0d0acd7c31b7996f073cf/node_modules/html-validate/node_modules:/opt/node_modules/.pnpm/html-validate@8.29.0_jest-diff@29.7.0_jest-snapshot@29.7.0_jest@29.7.0_@types+node@20.1_a1438cacc9d0d0acd7c31b7996f073cf/node_modules:/opt/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/opt/node_modules/.pnpm/html-validate@8.29.0_jest-diff@29.7.0_jest-snapshot@29.7.0_jest@29.7.0_@types+node@20.1_a1438cacc9d0d0acd7c31b7996f073cf/node_modules/html-validate/bin/node_modules:/opt/node_modules/.pnpm/html-validate@8.29.0_jest-diff@29.7.0_jest-snapshot@29.7.0_jest@29.7.0_@types+node@20.1_a1438cacc9d0d0acd7c31b7996f073cf/node_modules/html-validate/node_modules:/opt/node_modules/.pnpm/html-validate@8.29.0_jest-diff@29.7.0_jest-snapshot@29.7.0_jest@29.7.0_@types+node@20.1_a1438cacc9d0d0acd7c31b7996f073cf/node_modules:/opt/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../html-validate/bin/html-validate.js" "$@"
else
  exec node  "$basedir/../html-validate/bin/html-validate.js" "$@"
fi
