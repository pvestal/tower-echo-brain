#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/opt/node_modules/.pnpm/htmlhint@1.7.1/node_modules/htmlhint/bin/node_modules:/opt/node_modules/.pnpm/htmlhint@1.7.1/node_modules/htmlhint/node_modules:/opt/node_modules/.pnpm/htmlhint@1.7.1/node_modules:/opt/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/opt/node_modules/.pnpm/htmlhint@1.7.1/node_modules/htmlhint/bin/node_modules:/opt/node_modules/.pnpm/htmlhint@1.7.1/node_modules/htmlhint/node_modules:/opt/node_modules/.pnpm/htmlhint@1.7.1/node_modules:/opt/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../htmlhint/bin/htmlhint" "$@"
else
  exec node  "$basedir/../htmlhint/bin/htmlhint" "$@"
fi
