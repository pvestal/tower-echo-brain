{
  "fallback_chain": {
    "provider_priority": [
      "Claude API",
      "Ollama Local",
      "DeepSeek API",
      "OpenAI GPT-4",
      "OpenRouter",
      "Groq",
      "Together AI",
      "Pattern Matching"
    ],
    "quality_over_cost": true,
    "always_notify_on_fallback": true,
    "detailed_error_messages": true
  },

  "storage": {
    "primary": "Firebase",
    "secondary": "GitHub Pro",
    "no_aws": true,
    "firebase_config": {
      "project_id": "echo-brain-patrick",
      "storage_bucket": "echo-brain-backup.appspot.com",
      "use_firestore": true,
      "use_cloud_storage": true
    },
    "github_config": {
      "repo": "patrick/echo-brain-backups",
      "branch": "main",
      "use_pro_features": true,
      "auto_archive": true
    }
  },

  "notifications": {
    "telegram": {
      "enabled": true,
      "bot_name": "@PatricksEchoBot",
      "priority_levels": ["CRITICAL", "WARNING", "INFO"]
    },
    "email": {
      "enabled": true,
      "smtp": "smtp.gmail.com",
      "from": "patrick.vestal.digital@gmail.com",
      "to": "patrick.vestal@gmail.com",
      "priority_levels": ["CRITICAL"]
    },
    "dashboard": {
      "enabled": true,
      "url": "https://192.168.50.135/echo/alerts",
      "priority_levels": ["ALL"]
    }
  },

  "error_details": {
    "include_stack_trace": true,
    "include_timestamp": true,
    "include_provider_status": true,
    "include_recovery_steps": true,
    "include_cost_analysis": true,
    "helpful_diagnostics": [
      "Check provider status dashboard",
      "Review recent error patterns",
      "Verify API key validity",
      "Check network connectivity",
      "Review rate limits",
      "Check account balance"
    ]
  },

  "preferences": {
    "no_emojis_in_code": false,
    "emojis_in_notifications": true,
    "dark_theme": true,
    "professional_tone": true,
    "claude_console_style": true,
    "verbose_logging": true
  },

  "api_keys_location": {
    "storage": "HashiCorp Vault",
    "path": "secret/tower/",
    "services": {
      "anthropic": "secret/tower/anthropic",
      "openai": "secret/tower/openai",
      "deepseek": "secret/tower/deepseek",
      "openrouter": "secret/tower/openrouter",
      "groq": "secret/tower/groq",
      "together": "secret/tower/together",
      "firebase": "secret/tower/firebase",
      "github": "secret/tower/github"
    }
  },

  "cost_controls": {
    "daily_limit": 10.00,
    "monthly_limit": 100.00,
    "alert_at_percentage": 80,
    "auto_switch_to_free_at": 90,
    "track_per_conversation": true
  }
}